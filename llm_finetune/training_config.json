{
  "model_name": "deepseek-ai/deepseek-r1-7b",
  "output_dir": "./deepsim_deepseek_lora",
  "dataset_path": "./dataset.jsonl",
  "max_length": 2048,
  "batch_size": 4,
  "gradient_accumulation_steps": 4,
  "num_epochs": 3,
  "learning_rate": 2e-4,
  "warmup_steps": 100,
  "save_steps": 500,
  "eval_steps": 500,
  "logging_steps": 10,
  "use_wandb": true,
  "wandb_project": "deepsim-deepseek-finetune",
  "lora_config": {
    "r": 16,
    "lora_alpha": 32,
    "target_modules": [
      "q_proj", "k_proj", "v_proj", "o_proj",
      "gate_proj", "up_proj", "down_proj"
    ],
    "lora_dropout": 0.1,
    "bias": "none"
  },
  "bnb_config": {
    "load_in_4bit": true,
    "bnb_4bit_quant_type": "nf4",
    "bnb_4bit_compute_dtype": "bfloat16",
    "bnb_4bit_use_double_quant": true
  },
  "thunder_compute": {
    "endpoint": "${THUNDER_ENDPOINT}",
    "api_key": "${THUNDER_API_KEY}",
    "upload_model": true,
    "deploy_inference": true
  }
}